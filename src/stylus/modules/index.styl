.tl_footer
    width 100%
    padding 0 10%
    color #E6E2E2
    .tl_address
        text-align left
        font-weight bold
        &:hover
            color #F9AD8F   
            text-decoration underline
    .tl_name
        color #FFF
        font-weight bold   
    .tl_weixin,
    .tl_weibo
        color #FFF
        background rgba(247 ,201, 171,0.5)
        margin-right 30px
        border-radius 90%
        padding 2%
.tl_contact
    position relative
    color #A24621
    .tl_icon
        position absolute
        top 10px
        left 10px
    .tl_icon1
        position absolute
        top 10px
        left 25px
    .tl_left
        padding-left 30px
        resize none    
.tooltip-inner
    background-color #fff
.tl_submit
    padding 5px
.tl_top
    position fixed
    right 1%
    bottom 1%
    width 50px
    height 50px
    z-index 1000
.s_block
    width 70%
    margin 10px auto
.s_yd
    height 300px
.ab_customer
    color #6D7479
    margin-top 50px
    text-indent 2em
    line-height 25px
