body 
    font-family: "Microsoft Yahei", "微软雅黑",Tahoma, Helvetica, Arial, sans-serif
    // font-family Arial,Verdana,Sans-serif
    font-size 14px
.tl_heade
    width 100%
    margin 0 auto
    background-color rgba(255, 255, 255, 0.2)
    position absolute
    top 0px
    z-index 100 
    .tl_daohang
        display table
        margin 0 auto
.tl_width
    width 180px
.tl_head:hover
    background-color transparent !important   
.tl_nav
    color #FFF
    &:hover
        color #E45628      
.tl_yuandian
    bottom -50px
    .tl_yd
        border 1px solid #F3520A
.tl_yd.active
    background-color #F3520A         
.tl_jump
    float right 
    margin-right -10%
    background-color rgb(243,84,20)
    border-color #DD4F1C
    color #fff
    &:hover
        color #fff
.prev,
.next
    position absolute
    top 50%
    left 35% 
.tl_block
    text-align center
    margin-top 30px
    margin-bottom 20px       
    .tl_bottom
        width 30px
        background-color rgba(248, 153, 1, 0.8)
        color #fff
        line-height 30px
        border-radius 50%
        margin 20px
.tl_product
    padding-left 4%
    // background linear-gradient(#EA764C, #DD4F1C)
    background-color #fff
    color #DD4F1C

    .tl_exhibition
        width 16%
        text-align center
        .tl_link
            color #fff
            font-size 16px
            font-weight bold  
            background-color #DD4F1C
            border-color transparent
            &:hover
                background-color #A03B12
                border-color transparent
        .tl_triangle
            content ""
            border 15px solid transparent
            border-top-color #A03B12
            position absolute
            top 100%
            left 50%
            margin-left -15px
.tl_content
    width 70%
    margin 60px auto 0px auto
.tl_introduce
    text-indent 2em 
    line-height 45px
    font-weight bold       
.tl_second
    background-color rgba(243, 245, 248, 0.9)
    padding-bottom 30px
.tl_feiyu
    width 40%
.tl_cooperation
    width 70%
.tl_customer
    color #6D7479
    margin-top 10px
    line-height 30px
// .tl-more
